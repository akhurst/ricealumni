@model IEnumerable<Downplay.Theory.Identity.Models.CountryRecord>

<h2>@T("Countries")</h2>

@if (Model.Count() == 0)
{
    <p>@T("No countries found")</p>
}
else
{
<ul class="places">
@foreach (var c in Model)
{
    <li><a href="@Url.Action("Directory", new { countryId = c.Id })">@c.Title</a></li>
}
</ul>
}