@model IEnumerable<Downplay.Theory.Identity.Models.RegionRecord>

<h2>@T("Regions in {0}",ViewBag.Country.Title)</h2>

@if (Model.Count() == 0)
{
    <p>@T("No regions found")</p>
}
else
{
<ul class="places">
@foreach (var r in Model)
{
    <li><a href="@Url.Action("Directory", new { countryId = ViewBag.Country.Id, regionId = r.Id })">@r.Title</a></li>
}
</ul>
}