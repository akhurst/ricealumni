    SetMeta("X-UA-Compatible", "IE=edge,chrome=1");
    SetMeta("viewport", "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no");
    SetMeta("width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no","yes");
    Style.Include("http://fonts.googleapis.com/css?family=Lobster&subset=latin");
    Style.Include("site.css");
	Style.Include("normalize.min.css");
	Style.Include("main.css");
	Style.Include("superslides.css");
	Style.Include("flexslider.css");
    Style.Include("http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic,700italic,900italic");
	Script.Require("jQuery");
    Script.Include("modernizr-2.6.2-respond-1.1.0.min.js").AtHead();
	Script.Include("jquery.easing.1.3.js").AtFoot();
	Script.Include("jquery.animate-enhanced.min.js").AtFoot();
