@using Orchard.Utility.Extensions;
@{
    var contentTypeClassName = ((string)Model.ContentItem.ContentType).HtmlClassify();
}
@Style.Include("timeline.css")
<article class="content-item @contentTypeClassName">
    <div id="wrap">
        <section id="main-timeline">
            <div class="container">
                <div id="tline-content">

                    <div class="tline-topdate">April 2012</div>
                    <div data-bind="foreach: events"></div>
                    <article class="tline-box">
                        <span class="tline-row-l"></span>
                        <img src="images/eventlogo.png"><br>
                        <h6 class="blog-cat"><strong>Lorem</strong> Ipsum, Dolrem, Tag</h6>
                        <h4><a href="#" data-bind="text: Title"></a></h4>
                        <h6 class="blog-author"><strong>Something</strong> Section Sub Title</h6>
                        <br>
                        <p><a href="#">... view event </a></p>
                        <div class="blog-date-sp">
                            <h3>09</h3>
                            <span>April<br>
                                2012</span>
                        </div>
                        <div class="blog-com-sp">
                            Call to Action
                        </div>
                    </article>
                    <div class="tline-topdate enddte">December 2012</div>

                </div>
                <!-- end-pin-content -->


                <div class="white-space"></div>

            </div>
        </section>
        <!-- end-main-content-pin -->

        <section class="container aligncenter">
            <div class="pagination2">
                <ul>
                    <li class="disabled"><a href="#">«</a></li>
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">»</a></li>
                </ul>
            </div>
            <div class="white-space"></div>
        </section>
        <!-- container -->
    </div>
</article>

@Script.Include("knockout.js")
@Script.Include("events.js")